# This file is automatically generated by allgebra_template/gen_allgebra.sh

ARG REGISTRY
ARG TAG

FROM ${REGISTRY}/cuda11_7:${TAG}

RUN apt-get update && apt-get install -y \
    gcc-11-offload-nvptx \
    libelf-dev \
    nvptx-tools \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Override GCC11 by GCC
RUN rm -f /usr/bin/gcc /usr/bin/g++ \
    && ln -s /usr/bin/gcc-11 /usr/bin/gcc \
    && ln -s /usr/bin/g++-11 /usr/bin/g++

ENV ALLGEBRA_GCC_INSTALL_DIR /usr
ENV ALLGEBRA_GCC_VERSION 11.2.0
ENV ALLGEBRA_GCC_VERSION_MAJOR 11
ENV ALLGEBRA_GCC_VERSION_MINOR 2
ENV ALLGEBRA_GCC_VERSION_PATCH 0
